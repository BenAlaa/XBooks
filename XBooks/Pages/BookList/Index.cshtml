@page
@model XBooks.IndexModel

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Creat New Book</a>
    </div>

    <div class=" col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Books.Count()>0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Books.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(m => m.Books.FirstOrDefault().Author)*@
                            <label asp-for="Books.FirstOrDefault().Author"></label>
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var book in Model.Books)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => book.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => book.Author)
                            </td>
                            <td>
                                <button class="btn btn-danger btn-sm text-white">Delete</button>
                                <a class="btn btn-primary btn-sm text-white">Edit</a>
                            </td>
                        </tr>
                    }

                </table>
            }
            else
            {
                <p>No Books Available</p>
            }
        </form>
    </div>
</div>

